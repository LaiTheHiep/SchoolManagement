@model PagedList.IPagedList<SchoolManagement.Models.MessageContact>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Admin Page";
    Layout = "~/Views/SharedTemplate/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tables</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="col-sm-12">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row">
                                        <th>ID</th>
                                        <th>Email</th>
                                        <th>Date Send</th>
                                        <th>Message</th>
                                        <th>Admin</th>
                                        <th>Response</th>
                                        <th>Date Rep</th>
                                        <th>Rep</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr class="gradeA even" role="row">
                                        <td>@Html.DisplayFor(modelItem => item.ID)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DateSend).ToString().Substring(0, 10)</td>
                                        <td>@Html.DisplayFor(modelItem => item.MessageGuest)</td>
                                        <td>@Html.DisplayFor(modelItem => item.MessageReponse.Users.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.MessageReponse.MessageAdmin)</td>

                                        @{
                                            if (!(bool)item.isRep)
                                            {
                                                <td></td>
                                                <td>@Html.ActionLink("Rep", "RepMessage", new { id = item.ID })</td>
                                            }
                                            else
                                            {
                                                <td>@Html.DisplayFor(modelItem => item.MessageReponse.DateRep).ToString().Substring(0, 10)</td>
                                                <td></td>
                                            }
                                        }

                                    </tr>
                                    }
                                </tbody>
                            </table>
                            <b>@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</b>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
