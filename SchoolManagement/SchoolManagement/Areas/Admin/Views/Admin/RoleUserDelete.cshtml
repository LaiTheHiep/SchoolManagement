@model SchoolManagement.Models.Roles
@{ 
    ViewBag.Title = "Admin Page";
    Layout = "~/Views/SharedTemplate/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Delete Role</h1>        
    </div>
</div>
<ol class="breadcrumb">
    <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Admin")</li>
    <li class="breadcrumb-item">@Html.ActionLink("RoleUser", "RoleUser", "Admin")</li>
    <li class="breadcrumb-item">@Html.ActionLink("Delete", "RoleUserDelete", "Admin")</li>
</ol>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <table class="table">
        <tr>
            <th>Properties</th>
            <td><b>Data</b></td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ID)</th>
            <td>@Html.DisplayFor(model => model.ID)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.RoleName)</th>
            <td>@Html.DisplayFor(model => model.RoleName)</td>
        </tr>

    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Role User", "RoleUser")
        </div>
    }
</div>

