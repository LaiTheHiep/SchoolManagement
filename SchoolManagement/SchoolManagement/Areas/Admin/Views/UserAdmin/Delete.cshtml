@model SchoolManagement.Models.Users

@{
    ViewBag.Title = "Admin Page";
    Layout = "~/Views/SharedTemplate/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Admin</h1>
    </div>
</div>
<ol class="breadcrumb">
    <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Admin")</li>
    <li class="breadcrumb-item">@Html.ActionLink("Admin", "Index", "UserAdmin")</li>
    <li class="breadcrumb-item">@Html.ActionLink("Delete", "Delete", "UserAdmin")</li>
</ol>

<h4>Are you sure you want to delete this?</h4>
<div>
    <table class="table">
        <tr>
            <th>Account</th>
            <th>Password</th>
            <th>Name</th>
            <th>ClassName</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>RoleName</th>
        </tr>
        <tr>
            <td>@Html.DisplayFor(model => model.ID)</td>
            <td>@Html.DisplayFor(model => model.Password) </td>
            <td>@Html.DisplayFor(model => model.Name)</td>
            <td>@Html.DisplayFor(model => model.Classes.ClassName)</td>
            <td>@Html.DisplayFor(model => model.Email)</td>
            <td>@Html.DisplayFor(model => model.Phone)</td>
            <td>@Html.DisplayFor(model => model.Address)</td>
            <td>@Html.DisplayFor(model => model.Roles.RoleName)</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

