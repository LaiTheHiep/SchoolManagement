@model IEnumerable<SchoolManagement.Models.RegistrationClasses>
@{
    ViewBag.Title = "Student Page";
    Layout = "~/Views/SharedTemplate/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Reg_Class</h1>
    </div>
</div>
<ol class="breadcrumb">
    <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Student")</li>
    <li class="breadcrumb-item">@Html.ActionLink("RegClass", "RegClass", "Student")</li>
</ol>

@if (ViewBag.Check)
{
    <div class="panel-body">
        @using (Html.BeginForm("CreateRegClass", "Student", FormMethod.Get))
        {
            <div class="row">
                <div class="col-lg-12">
                    IDClass
                    <input type="text" name="idClass" /> <button type="submit">Register</button>
                </div>
            </div>
        }
        <br />
    </div>
}
else
{ <h5 style="color: red">Đây không phải là thời điểm đăng ký</h5>}
<div>
    <table class="table table-bordered" id="dataTable">
        <tr>
            <th>Time</th>
            <th>ClassRoom</th>
            <th>IDClass</th>
            <th>Type</th>
            <th>IDSubject</th>
            <th>SubjectName</th>
            <th>Note</th>
            @if (ViewBag.Check)
            {
                <th>Delete</th>}
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Class_Subjects.Time)</td>
                <td>@Html.DisplayFor(modelItem => item.Class_Subjects.Classroom)</td>
                <td>@Html.DisplayFor(modelItem => item.IDClass)</td>
                <td>@Html.DisplayFor(modelItem => item.Class_Subjects.ClassType)</td>
                <td>@Html.DisplayFor(modelItem => item.Class_Subjects.SubjectID)</td>
                <td>@Html.DisplayFor(modelItem => item.Class_Subjects.Subjects.SubjectName)</td>
                <td>@Html.DisplayFor(modelItem => item.Class_Subjects.Note)</td>
                @if (ViewBag.Check)
                {
                    <td>@Html.ActionLink("Delete", "DeleteClass", new { id = item.ID })</td>}
            </tr>
        }
    </table>
</div>

