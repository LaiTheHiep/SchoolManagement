@model IEnumerable<SchoolManagement.Models.RegistrationSubjects>
@{
    ViewBag.Title = "Student Page";
    Layout = "~/Views/SharedTemplate/_LayoutAdmin.cshtml";
    int _stt = 1;
    string _message = ViewBag.MessageReg;
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Reg_Subject</h1>
    </div>
</div>
<ol class="breadcrumb">
    <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Student")</li>
    <li class="breadcrumb-item">@Html.ActionLink("Register", "RegSubject", "Student")</li>
</ol>
<h6 style="color: red">@_message</h6>
@if (ViewBag.Check)
{
    <div class="panel-body">
        @using (Html.BeginForm("CreateRegSubject", "Student", FormMethod.Get))
        {
            <div class="row">
                <div class="col-lg-12">
                    IDSubject
                    <input type="text" name="idSubject" /> <button type="submit">Register</button>
                </div>
            </div>
        }
        <br />
    </div>
}
else
{ <h5 style="color: red">Đây không phải là thời điểm đăng ký</h5>}
<div>
    <table class="table table-bordered" id="dataTable">
        <tr>
            <th>STT</th>
            <th>IDSubject</th>
            <th>SubjectName</th>
            <th>TC</th>
            <th>TC_Fee</th>
            <th>Note</th>
            @if (ViewBag.Check)
            {
                <th>Delete</th>}
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@_stt</td>
                @{ _stt++;}
                <td>@Html.DisplayFor(modelItem => item.IDSubject)</td>
                <td>@Html.DisplayFor(modelItem => item.Subjects.SubjectName)</td>
                <td>@Html.DisplayFor(modelItem => item.Subjects.TC)</td>
                <td>@Html.DisplayFor(modelItem => item.Subjects.TC_Fee)</td>
                <td>@Html.DisplayFor(modelItem => item.Subjects.Note)</td>
                @if (ViewBag.Check)
                {
                    <td>@Html.ActionLink("Delete", "DeleteSubject", new { id = item.ID })</td>}
            </tr>
        }
    </table>
</div>

