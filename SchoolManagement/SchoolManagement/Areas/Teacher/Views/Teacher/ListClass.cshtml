@model PagedList.IPagedList<SchoolManagement.Models.RegistrationClasses>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Teacher Page";
    Layout = "~/Views/SharedTemplate/_LayoutAdmin.cshtml";
    int _stt = 1;
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Class</h1>
    </div>
</div>
<ol class="breadcrumb">
    <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Teacher")</li>
    <li class="breadcrumb-item">@Html.ActionLink("Schedule", "PlanTeacher", "Teacher")</li>
</ol>

<h4>@Html.ActionLink("Grades student", "Mark")</h4>
<div>
    <table class="table table-bordered" id="dataTable">
        <tr>
            <th>STT</th>
            <th>MSSV</th>
            <th>Full Name</th>
            <th>Class</th>
            <th>Course</th>
            <th>Phone</th>
            <th>Email</th>
            <th>IDClass</th>
            <th>IDSubject</th>
            <th>Subject</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@_stt</td>
                @{_stt++;}
                <td>@Html.DisplayFor(modelItem => item.IDStudent)</td>
                <td>@Html.DisplayFor(modelItem => item.Users.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Users.Classes.ClassName)</td>
                <td>@Html.DisplayFor(modelItem => item.Users.Classes.Course)</td>
                <td>@Html.DisplayFor(modelItem => item.Users.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.Users.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.IDClass)</td>
                <td>@Html.DisplayFor(modelItem => item.Class_Subjects.SubjectID)</td>
                <td>@Html.DisplayFor(modelItem => item.Class_Subjects.Subjects.SubjectName)</td>

            </tr>
        }
    </table>
    <b>@Html.PagedListPager(Model, page => Url.Action("ListClass", new { page }))</b>
</div>

