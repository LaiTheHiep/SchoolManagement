@model PagedList.IPagedList<SchoolManagement.Models.Grades>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Teacher Page";
    Layout = "~/Views/SharedTemplate/_LayoutAdmin.cshtml";
    int _stt = 1;
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Gade for Student</h1>
    </div>
</div>
<ol class="breadcrumb">
    <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Teacher")</li>
    <li class="breadcrumb-item">@Html.ActionLink("Schedule", "PlanTeacher", "Teacher")</li>
</ol>

<h6 style="color: red"><label class="field-validation-error">@ViewBag.ErrorMark</label></h6>

    @using (Html.BeginForm("CreateScore", "Teacher", FormMethod.Get))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-10">
                    Score Student <br />
                    MSSV:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="text" name="MSSV" />
                    IDSubject: &nbsp;&nbsp;&nbsp;
                    <input type="text" name="IDSubject" />
                    Semester: <input type="text" name="IDSubject" />
                </div>                
                <div class="col-md-10">
                    <br />
                    Score_QT: <input type="text" name="Score_QT" />
                    Score_Final: <input type="text" name="Score_Final" />
                    <button type="submit">Add</button>
                </div>
            </div>
        </div>
    }
    <br />

<div>
    <table class="table table-bordered" id="dataTable">
        <tr>
            <th>STT</th>
            <th>MSSV</th>
            <th>Name</th>
            <th>Score_QT</th>
            <th>Score_Final</th>
            <th>Semester</th>
            <th>IDSubject</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@_stt</td>
                @{ _stt++;}
                <td>@Html.DisplayFor(modelItem => item.IDStudent)</td>
                <td>@Html.DisplayFor(modelItem => item.Users.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ScoreQT)</td>
                <td>@Html.DisplayFor(modelItem => item.ScoreFinal)</td>
                <td>@Html.DisplayFor(modelItem => item.Semester)</td>
                <td>@Html.DisplayFor(modelItem => item.IDSubject)</td>
            </tr>
        }
    </table>
    <b>@Html.PagedListPager(Model, page => Url.Action("Mark", new { page }))</b>
</div>
