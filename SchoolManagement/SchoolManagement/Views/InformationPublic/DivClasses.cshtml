@model PagedList.IPagedList<SchoolManagement.Models.DivisionClasses>
@using PagedList.Mvc;

@{
    ViewBag.Title = "DivClasses";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    int _stt = 1;
}
<section class="site-section">
    <div class="row justify-content-center mb-5">
        <div class="col-md-7 text-center">
            <br />
            <h2>DivClasses</h2>
        </div>
        <div class="col-md-7 text-center">
            @using (Html.BeginForm("DivClasses", "InformationPublic", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-lg-12">
                        Select by Subject or Teacher
                        <input type="text" name="searchString" value="@ViewBag.searchString" /> <button type="submit">Search</button>
                    </div>
                </div>
            }
            <br />
        </div>
        <div class="col-md-7 text-center">
            <table class=" table table-light" border="1" cellpadding="10" cellspacing="10">
                <tr>
                    <th>STT</th>
                    <th>IDClass</th>
                    <th>Subject</th>
                    <th>IDSubject</th>
                    <th>Time</th>
                    <th>ClassRoom</th>
                    <th>Teacher</th>
                    <th>Phone</th>
                    <th>Email</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@_stt</td>
                        @{ _stt++;}
                        <td>@Html.DisplayFor(modelItem => item.IDClass)</td>
                        <td>@Html.DisplayFor(modelItem => item.Class_Subjects.Subjects.SubjectName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Class_Subjects.SubjectID)</td>
                        <td>@Html.DisplayFor(modelItem => item.Class_Subjects.Time)</td>
                        <td>@Html.DisplayFor(modelItem => item.Class_Subjects.Classroom)</td>
                        <td>@Html.DisplayFor(modelItem => item.Users.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Users.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Users.Email)</td>
                    </tr>
                }
            </table>
            <b>@Html.PagedListPager(Model, page => Url.Action("DivClasses", new { page, searchString = ViewBag.searchString }))</b>
        </div>
    </div>
</section>