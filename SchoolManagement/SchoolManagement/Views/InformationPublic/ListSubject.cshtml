@model PagedList.IPagedList<SchoolManagement.Models.Subjects>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListSubject";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<section class="site-section">
    <div class="row justify-content-center mb-5">
        <div class="col-md-7 text-center">
            <br />
            <h2>ListSubject</h2>
        </div>
        <div class="col-md-7 text-center">
            @using (Html.BeginForm("ListSubject", "InformationPublic", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-lg-12">
                        Select Subject
                        <input type="text" name="searchString" value="@ViewBag.searchString" /> <button type="submit">Search</button>
                    </div>
                </div>
            }
            <br />
        </div>
        <div class="col-md-7 text-center">
            <table class=" table table-light" border="1" cellpadding="10" cellspacing="10">
                <tr>
                    <th>ID</th>
                    <th>SubjectName</th>
                    <th>TC</th>
                    <th>TC_Fee</th>
                    <th>Note</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ID)</td>
                        <td>@Html.DisplayFor(modelItem => item.SubjectName)</td>
                        <td>@Html.DisplayFor(modelItem => item.TC)</td>
                        <td>@Html.DisplayFor(modelItem => item.TC_Fee)</td>
                        <td>@Html.DisplayFor(modelItem => item.Note)</td>
                    </tr>
                }
            </table>
            <b>@Html.PagedListPager(Model, page => Url.Action("ListSubject", new { page, searchString = ViewBag.searchString }))</b>
        </div>
    </div>
</section>