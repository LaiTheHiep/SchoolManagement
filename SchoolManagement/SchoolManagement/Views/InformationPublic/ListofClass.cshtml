@model PagedList.IPagedList<SchoolManagement.Models.Classes>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListofClass";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    int _stt = 1;
}

<section class="site-section">
    <div class="row justify-content-center mb-5">
        <div class="col-md-7 text-center">
            <br />
            <h2>List of Class</h2>
        </div>
        <div class="col-md-7 text-center">
            <br />
            @using (Html.BeginForm("ListofClass", "InformationPublic", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-lg-12">
                        Select Class
                        <input type="text" name="searchString" value="@ViewBag.searchString" /> <button type="submit">Search</button>
                    </div>
                </div>
            }
            <br />
        </div>

        <div class="col-md-7 text-center">
            <table class=" table table-light" border="1" cellpadding="10" cellspacing="10">
                <tr>
                    <th>STT</th>
                    <th>ID</th>
                    <th>Class</th>
                    <th>Course</th>
                    <th>View Members</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@_stt</td>
                        @{ _stt++;}
                        <td>@Html.DisplayFor(modelItem => item.ID)</td>
                        <td>@Html.DisplayFor(modelItem => item.ClassName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Course)</td>
                        <td>@Html.ActionLink("View", "ViewListClass", new { id = item.ID })</td>
                    </tr>
                }

            </table>
            <b>@Html.PagedListPager(Model, page => Url.Action("ListofClass", new { page, searchString = ViewBag.searchString }))</b>
        </div>
    </div>
</section>